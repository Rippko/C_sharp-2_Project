<Window x:Class="WpfApp1.CustomerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Zákazník" Height="250" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <local:MyConverter x:Key="myConv" />
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <DockPanel Margin="10">
            <Label Content="Jméno"/>
            <TextBox Text="{Binding FirstName, Converter={StaticResource myConv}}"/>
        </DockPanel>
        <DockPanel Margin="10">
            <Label Content="Příjmení"/>
            <TextBox Text="{Binding LastName}"/>
        </DockPanel>
        <DockPanel Margin="10">
            <Label Content="Věk"/>
            <TextBox Text="{Binding Age}"/>
        </DockPanel>

        <Button Content="Uložit" Margin="10"/>
    </StackPanel>
</Window>
